<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.mercury_wireless.lib.sliding_button"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/sliding_button_demo_previousButton"
			android:text="Previous"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/sliding_button_demo_nextButton"
			android:text="Next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:orientation="vertical"></LinearLayout>
	<ViewFlipper
		android:id="@+id/sliding_button_demo_viewFlipper"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="View 1" />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="View 2" />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="View 3" />
	</ViewFlipper>
	<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:orientation="vertical"></LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:layout_height="10dip"></LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|top"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
		<com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></com.mercury_wireless.lib.sliding_button.SlidingHorizontalButton>
	</LinearLayout>
</LinearLayout>