<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/toggle_button_background_9">
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		android:layout_width="fill_parent"
		android:weightSum="2">
		<TextView
			android:gravity="center"
			android:layout_width="0dip"
			android:text="Text On"
			android:id="@+id/text_on"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:layout_gravity="center"></TextView>
		<TextView
			android:gravity="center"
			android:layout_width="0dip"
			android:text="Text Off"
			android:id="@+id/text_off"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:layout_gravity="center"></TextView>
	</LinearLayout>
	<ViewFlipper
		android:id="@+id/view_flipper"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/container_on"
			android:layout_width="fill_parent"
			android:weightSum="2"
			android:gravity="right"
			android:layout_height="fill_parent"
			android:layout_gravity="center">
			<ImageView
				android:id="@+id/button_on"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:src="@drawable/toggle_button_center_9"
				android:scaleType="fitXY" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/container_off"
			android:weightSum="2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center">
			<ImageView
				android:id="@+id/button_off"
				android:layout_width="0dip"
				android:src="@drawable/toggle_button_center"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:scaleType="fitXY" />
		</LinearLayout>
	</ViewFlipper>
</FrameLayout>